# frozen_string_literal: true

source 'https://rubygems.org'

# Compiling
gem 'compass'

group :development do
  # Guard
  gem 'guard', '>= 1.8.2', require: false
  gem 'guard-coffeescript', '>= 1.3.2', require: false
  gem 'guard-compass', '>= 0.0.8', require: false

  # For detecting changes in the filesystem
  gem 'rb-fsevent', require: false
  gem 'rb-inotify', '>= 0.9.1', require: false

  # For displaying notices
  gem 'growl', require: false
  gem 'libnotify', '>= 0.8.1', require: false
end
